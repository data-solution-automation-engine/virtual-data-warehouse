USE [{{../metadataConfiguration.persistentStagingdatabaseName}}]
GO

IF  EXISTS (SELECT * FROM sys.objects WHERE object_id = OBJECT_ID(N'[{{../metadataConfiguration.vedwSchemaName}}].[{{../generationSpecificMetadata.selectedDataObject}}]') AND type in (N'V'))
DROP VIEW [{{../metadataConfiguration.vedwSchemaName}}].[{{../generationSpecificMetadata.selectedDataObject}}]
GO

CREATE VIEW [{{../metadataConfiguration.vedwSchemaName}}].[{{targetDataObject.name}}] AS
SELECT 
    HASHBYTES('MD5', {{#each businessKeys}}{{#unless @first}} +{{/unless}}{{!-- Create the Surrogate Key using the Business Key and components --}}{{#each businessKeyComponentMapping}}
       ISNULL(RTRIM(CONVERT(NVARCHAR(100), {{targetDataItem.name}})), 'N/A') + '#~!'{{#unless @last}} +{{/unless}}{{/each}}{{/each}}{{#each businessKeys}}{{#if @first}}
    ) AS {{surrogateKey}},{{/if}}{{/each}}
    {{#each businessKeys}}{{#each BusinessKeyComponentMapping}}--{{targetDataItem.name}}{{#unless @last}},{{/unless}}
    {{/each}}{{/each}}DATEADD(mcs,[{{../metadataConfiguration.sourceRowIdAttribute}}], {{../metadataConfiguration.loadDateTimeAttribute}}) AS {{../metadataConfiguration.loadDateTimeAttribute}},
    COALESCE (
      LEAD (DATEADD(mcs,[{{../metadataConfiguration.sourceRowIdAttribute}}], {{../metadataConfiguration.loadDateTimeAttribute}}) ) OVER
      ( PARTITION BY {{#each businessKeys}}{{#each BusinessKeyComponentMapping}}{{#if sourceDataItem.dataItemclassification}}{{targetDataItem.name}}{{/if}}{{/each}}{{/each}}
       ORDER BY {{../metadataConfiguration.loadDateTimeAttribute}}),
       CAST( '9999-12-31' AS DATETIME)
    ) AS LOAD_END_DATETIME,
    CASE
      WHEN ( LEAD ({{../metadataConfiguration.loadDateTimeAttribute}}) OVER (PARTITION BY {{#each businessKeys}}{{#each BusinessKeyComponentMapping}}{{#if sourceDataItem.dataItemclassification}}{{targetDataItem.name}}{{/if}}{{/each}}{{/each}}
         ORDER BY {{../metadataConfiguration.loadDateTimeAttribute}})) IS NULL
       THEN 'Y'
       ELSE 'N'
    END AS CURRENT_RECORD_INDICATOR,
    -1 AS {{../metadataConfiguration.etlProcessAttribute}}, {{!-- List out the ETL Framework attributes --}}
    {{../metadataConfiguration.changeDataCaptureAttribute}},
    {{../metadataConfiguration.sourceRowIdAttribute}},
    {{../metadataConfiguration.recordSourceAttribute}},
    CASE
      WHEN {{../metadataConfiguration.changeDataCaptureAttribute}} = 'Delete' THEN 'Y'
      ELSE 'N'
    END AS [DELETED_RECORD_INDICATOR],
    HASHBYTES('MD5',
      ISNULL(RTRIM(CONVERT(NVARCHAR(100),{{../metadataConfiguration.changeDataCaptureAttribute}})), 'N/A') + '#~!' +
      {{#each businessKeys}}{{#each BusinessKeyComponentMapping}}ISNULL(RTRIM(CONVERT(NVARCHAR(100),{{targetDataItem.name}})), 'N/A') + '#~!'{{#unless @last}} +{{/unless}}
      {{/each}}{{/each}}) AS {{../metadataConfiguration.recordChecksumAttribute}},
    CAST (
       ROW_NUMBER() OVER (PARTITION BY {{#each businessKeys}}{{#each BusinessKeyComponentMapping}}{{#if sourceDataItem.dataItemclassification}}{{targetDataItem.name}}{{/if}}{{/each}}{{/each}}
       ORDER BY {{#each businessKeys}}{{#each BusinessKeyComponentMapping}}{{#if sourceDataItem.dataItemclassification}}{{targetDataItem.name}}{{/if}}{{/each}}{{/each}},  {{../metadataConfiguration.loadDateTimeAttribute}}
      ) AS INT)
    AS ROW_NUMBER
FROM
(
  SELECT 
    [{{../metadataConfiguration.loadDateTimeAttribute}}],
    [{{../metadataConfiguration.eventDateTimeAttribute}}],
    [{{../metadataConfiguration.recordSourceAttribute}}],
    [{{../metadataConfiguration.sourceRowIdAttribute}}],
    [{{../metadataConfiguration.changeDataCaptureAttribute}}],{{#each businessKeys}}{{#each businessKeyComponentMapping}}
    [{{sourceDataItem.name}}] AS [{{targetDataItem.name}}],{{/each}}{{/each}}
    LAG({{#each businessKeys}}{{#each BusinessKeyComponentMapping}}{{#unless sourceDataItem.dataItemclassification}} [{{sourceDataItem.name}}], 1, '0')  OVER (PARTITION BY {{#each ../../businessKey}}{{#each BusinessKeyComponentMapping}}{{#if sourceDataItem.dataItemclassification}}[{{sourceDataItem.name}}]{{/if}}{{/each}}{{/each}}  ORDER BY [{{../../../metadataConfiguration.loadDateTimeAttribute}}]) AS PREVIOUS_FOLLOWER_KEY{{@index}}{{/unless}}{{/each}}{{/each}}
  FROM {{sourceDataObject.name}}
  WHERE NOT
  ([{{../metadataConfiguration.sourceRowIdAttribute}}]>1 AND [{{../metadataConfiguration.changeDataCaptureAttribute}}] ='Delete')
  {{#if filterCriterion}}AND {{filterCriterion}} {{/if}}  
  UNION
  SELECT 
    [{{../metadataConfiguration.loadDateTimeAttribute}}],
    [{{../metadataConfiguration.eventDateTimeAttribute}}],
    [{{../metadataConfiguration.recordSourceAttribute}}],
    [{{../metadataConfiguration.sourceRowIdAttribute}}],
    [{{../metadataConfiguration.changeDataCaptureAttribute}}],{{#each businessKeys}}{{#each businessKeyComponentMapping}}
    [{{targetDataItem.name}}],{{/each}}{{/each}}
    {{#each businessKeys}}{{#each BusinessKeyComponentMapping}}{{#unless sourceDataItem.dataItemclassification}}'{{@index}}' AS PREVIOUS_FOLLOWER_KEY{{@index}}{{/unless}}{{/each}}{{/each}}
  FROM 
  (
     SELECT
          '1900-01-01' AS [{{../metadataConfiguration.loadDateTimeAttribute}}],
          '1900-01-01' AS [{{../metadataConfiguration.eventDateTimeAttribute}}],
          'Data Warehouse' AS [{{../metadataConfiguration.recordSourceAttribute}}],
          0 AS [{{../metadataConfiguration.sourceRowIdAttribute}}],
          'N/A' AS  [{{../metadataConfiguration.changeDataCaptureAttribute}}],{{#each businessKeys}}
          {{#each businessKeyComponentMapping}}[{{sourceDataItem.name}}] AS [{{targetDataItem.name}}],
          {{/each}}          {{/each}}
          DENSE_RANK() OVER (PARTITION BY {{#each businessKeys}}{{#each BusinessKeyComponentMapping}}{{#if sourceDataItem.dataItemclassification}}{{sourceDataItem.name}}{{/if}}{{/each}}{{/each}}
            ORDER BY [{{../metadataConfiguration.loadDateTimeAttribute}}], {{#each businessKeys}}{{#each BusinessKeyComponentMapping}}{{#if sourceDataItem.dataItemclassification}}{{sourceDataItem.name}}{{/if}}{{/each}}{{/each}} ASC) AS ROWVERSION

        FROM {{sourceDataObject.name}}
   ) dummysub
WHERE ROWVERSION=1
) sub
WHERE 
    {{#each businessKeys}}{{#each BusinessKeyComponentMapping}}{{#unless sourceDataItem.dataItemclassification}}[{{targetDataItem.name}}] != PREVIOUS_FOLLOWER_KEY{{@index}}{{/unless}}{{/each}}{{/each}}
